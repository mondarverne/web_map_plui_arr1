{
  "version": 8,
  "name": "PCI",
  "glyphs":"https://data.geopf.fr/annexes/ressources/vectorTiles/fonts/{fontstack}/{range}.pbf",
  "metadata": {"maputnik:renderer": "ol"},
  "sources": {
    "pci": {
      "type": "vector",
      "tiles": [
        "https://data.geopf.fr/tms/1.0.0/PCI/{z}/{x}/{y}.pbf"
        ],
      "scheme": "xyz"
    }
  },
  "transition": {
    "duration": 300,
    "delay": 0
  },
  "layers": 
  [
    {
      "id": "departement_line",
      "type": "line",
      "source": "pci",
      "source-layer": "departement",
      "paint": {"line-color": "#000000"},
      "minzoom": 5,
      "layout": {"line-join": "bevel"}
    },
    {
    "id": "commune",
    "type": "line",
    "source": "pci",
    "source-layer": "commune",
    "paint": {
      "line-color": "#323232",
      "line-width": 0.8
      },
    "minzoom": 10
    },
    {
      "id": "nom_com",
      "type": "symbol",
      "source": "pci",
      "source-layer": "commune",
      "maxzoom" : 15,
      "layout": {
        "text-field": "{nom_com}",
        "text-size": 12,
        "text-anchor": "center",
        "text-keep-upright": true,
        "text-max-angle": 45,
        "text-padding": 1,
        "text-font": [
          "Source Sans Pro Bold Italic"
        ]
      },
      "paint": {
        "text-color": "#323232",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "parcelle-limit",
      "type": "line",
      "source": "pci",
      "source-layer": "parcelle",
      "paint": {
        "line-color": "#323232",
        "line-width": 0.3
      },
      "layout": {"line-join": "bevel"},
      "minzoom": 5
    },
    {
      "id": "batiment",
      "type": "fill",
      "source": "pci",
      "source-layer": "batiment",
      "maxzoom": 18,
      "paint": {
        "fill-color": "#61696b",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "batiment-leger",
      "type": "fill",
      "source": "pci",
      "source-layer": "batiment",
      "minzoom": 18,
      "filter": [
        "==",
        "type",
        "Construction légère"
      ],
      "paint": {
        "fill-color": "#DFCCFF",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "batiment-dur",
      "type": "fill",
      "source": "pci",
      "source-layer": "batiment",
      "minzoom": 18,
      "paint": {
        "fill-color": "#61696b",
        "fill-opacity": 0.4
      },
      "filter": [
        "==",
        "type",
        "Bâtiment en dur"
      ]
    },
    {
      "id": "feuille",
      "type": "line",
      "source": "pci",
      "source-layer": "feuille",
      "paint": {
        "line-color": "#323232",
        "line-width": 0.8
      },
      "minzoom": 14,
      "maxzoom": 24,
      "layout": {
        "line-cap": "butt",
        "line-join": "bevel"
      }
    },
    {
    "id": "feuille_label",
    "type": "symbol",
    "source": "pci",
    "source-layer": "feuille",
    "layout": {
      "text-field": "{section}",
      "text-font": [
        "Source Sans Pro Bold Italic"
      ],
      "text-size": 15
    },
    "paint": {
      "text-color": "#323232",
      "text-halo-color": "#ffffff",
      "text-halo-width": 1
    },
    "minzoom": 14,
    "maxzoom": 16
    },
    {
      "id": "localisant",
      "type": "symbol",
      "source": "pci",
      "source-layer": "localisant",
      "minzoom": 18,
      "layout": {
        "text-field": "{numero}",
        "text-size": 12,
        "text-anchor": "center",
        "text-keep-upright": true,
        "text-max-angle": 45,
        "text-padding": 1,
        "text-font": [
          "Calibri"
        ]
      },
      "paint": {
        "text-color": "#323232",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}






























